code/await Snds (void)
                    => (var& _Mix_Chunk_ptr start,
                        var& _Mix_Chunk_ptr explosion)
                        => void
do
    var& _Mix_Chunk_ptr start_, explosion_;
    spawn SDL_open_sound("snds/start.wav")     => (start_);
    spawn SDL_open_sound("snds/explosion.wav") => (explosion_);
    start     = &start_;
    explosion = &explosion_;
    await FOREVER;
end
